{
    // The ID of your mod. Should be unique!!
    "id": "mf366_001",
    // Displays on the main menu.
    "name": "A New World...?",
    // Displays underneath the name. Optional.
    "subtitle": "You, Noelle and Susie are lost in this world...",

    // The version of your mod.
    "version": "v0.0.7",
    // What version of the engine your mod was made with.
    "engineVer": "v0.8.0",

    // The Deltarune chapter you'd like to base your mod off of.
    // Do keep in mind that you can control chapter-specific features
    // one by one using the config below.
    "chapter": 2,

    // The map that you start in when first starting the mod.
    "map": "room1",

    // The party. The first character is the player.
    "party": ["kris", "susie", "noelle"],

    // The inventory. Contains three darkburgers, a cell phone and a shadow crystal by default.
    "inventory": {
        "items": ["ultimate_candy"]
    },

    // Equipment for your party. Not specifying equipment defaults to the following.
    "equipment": {
        "kris": {
            "weapon": "chaos_knife",
            "armor": ["amber_card", "amber_card"]
        },
        "susie": {
            "weapon": "mane_ax",
            "armor": ["amber_card", "amber_card"]
        },
        "ralsei": {
            "weapon": "red_scarf",
            "armor": ["amber_card", "amber_card"]
        }
    },

    // Whether selecting your mod starts the dark world transition in the main menu or not.
    "transition": false,

    // Should never be true, but just in case. Restarts the entire engine when leaving the mod.
    // If you need this, you're most likely doing something wrong.
    "hardReset": true,

    // Whether the mod is hidden from the mod selection.
    "hidden": false,

    // Config values for the engine and any libraries you may have.
    // These config values can control chapter-specific features as well.
    "config": {
        "kristal": {
            // Extra 48-slot item storage
            "enableStorage": true,
            // Whether X-Actions appear in spell menu by default
            "partyActions": false,
            // Stat increases after defeating an enemy with violence
            "growStronger": false,
            // The character who grows stronger if they're in the party
            "growStrongerChara": "noelle",
            // What sprite set Susie should use
            "susieStyle": 2,
            // What sprite set Ralsei should use
            "ralseiStyle": 2,
            // Whether the Tension Bar uses blocky corners or not.
            "oldTensionBar": false,
            // Whether to use Chapter 1 positions of UI elements or not.
            "oldUIPositions": false,
            // The default style for enemy speech bubbles
            "speechBubble": "cyber",
            // The red aura around enemies
            "enemyAuras": true,
            // Seeing +X when an enemy's mercy goes up
            "mercyMessages": true,
            // Whether the mercy bar should appear or not
            "mercyBar": true,
            // Whether the HP and Mercy bars should show percentages
            "enemyBarPercentages": true,
            // Whether pushing a block should freeze the player
            "pushBlockInputLock": true
            // End of config
        }
    }
}